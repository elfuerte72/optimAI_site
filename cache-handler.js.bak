const { IncrementalCache } = require('@next/cache');

class CustomCacheHandler extends IncrementalCache {
  constructor(options) {
    super(options);
    console.log('ğŸš€ Custom cache handler initialized for CI/CD optimization');
  }

  async get(key) {
    const result = await super.get(key);
    if (result) {
      console.log(`âœ… Cache hit for key: ${key}`);
    } else {
      console.log(`âŒ Cache miss for key: ${key}`);
    }
    return result;
  }

  async set(key, data, ctx) {
    console.log(`ğŸ’¾ Setting cache for key: ${key}`);
    return super.set(key, data, ctx);
  }
}

module.exports = CustomCacheHandler;